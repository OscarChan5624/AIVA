                            rgba: utils.get_color_from_hex('#262642')
                        RoundedRectangle:
                            radius: [20,]
                            pos: self.pos
                            size: self.size
                    
                    Label:
                        text: '3. User Account'
                        color: 0.3, 0.98, 0.6, 1
                        font_size: '16sp'
                        bold: True
                        size_hint_y: None
                        height: dp(30)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    Label:
                        text: 'You are responsible for maintaining the confidentiality of your account credentials. You agree to accept responsibility for all activities that occur under your account. You must notify us immediately of any unauthorized use of your account or any other breach of security.'
