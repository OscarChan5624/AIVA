#:import utils kivy.utils
#:import dp kivy.metrics.dp

<TermsConditionsScreen@Screen>:
    name: 'terms_conditions'
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: utils.get_color_from_hex('#101024')
            Rectangle:
                pos: self.pos
                size: self.size
        
        # Header with back button
        BoxLayout:
            size_hint_y: None
            height: dp(64)
            padding: dp(16), dp(12)
            spacing: dp(12)
            Button:
                text: '< Back'
                size_hint_x: None
                width: dp(90)
                background_normal: ''
                background_color: utils.get_color_from_hex('#2d2d48')
                color: 1, 1, 1, 1
                on_release: app.back_to_profile()
            Label:
                text: 'Terms & Conditions'
                color: 1, 1, 1, 1
                font_size: '20sp'
                bold: True
                halign: 'left'
                valign: 'middle'
                text_size: self.size
            Widget:
                size_hint_x: None
                width: dp(48)
        
        # Scrollable content
        ScrollView:
            do_scroll_x: False
            bar_color: 1, 1, 1, .2
            bar_inactive_color: 1, 1, 1, .1
            BoxLayout:
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
                padding: dp(20)
                spacing: dp(16)
                
                # Last Updated
                Label:
                    text: 'Last Updated: November 26, 2025'
                    color: 0.81, 0.82, 1, 1
                    font_size: '12sp'
                    size_hint_y: None
                    height: dp(24)
                    halign: 'left'
                    valign: 'middle'
                    text_size: self.size
                
                # Introduction
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(20)
                    spacing: dp(12)
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#262642')
                        RoundedRectangle:
                            radius: [20,]
                            pos: self.pos
                            size: self.size
                    
                    Label:
                        text: '1. Introduction'
                        color: 0.3, 0.98, 0.6, 1
                        font_size: '16sp'
                        bold: True
                        size_hint_y: None
                        height: dp(30)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    Label:
                        text: 'Welcome to Time Manager. By using our application, you agree to be bound by these Terms and Conditions. Please read them carefully before using the app. If you do not agree with any part of these terms, you should not use our application.'
                        color: 1, 1, 1, 1
                        font_size: '13sp'
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'left'
                        valign: 'top'
                        text_size: self.width - dp(40), None
                        markup: True
                
                # Acceptance of Terms
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(20)
                    spacing: dp(12)
                    canvas.before:
                        Color:
                            rgba: utils.get_color_from_hex('#262642')
                        RoundedRectangle:
                            radius: [20,]
                            pos: self.pos
                            size: self.size
                    
                    Label:
                        text: '2. Acceptance of Terms'
                        color: 0.3, 0.98, 0.6, 1
                        font_size: '16sp'
                        bold: True
                        size_hint_y: None
                        height: dp(30)
                        halign: 'left'
                        valign: 'middle'
                        text_size: self.size
                    
                    Label:
                        text: 'By creating an account or using Time Manager, you acknowledge that you have read, understood, and agree to be bound by these Terms and Conditions. We reserve the right to modify these terms at any time, and your continued use of the app constitutes acceptance of any changes.'
                        color: 1, 1, 1, 1
                        font_size: '13sp'
                        size_hint_y: None
                        height: self.texture_size[1]
                        halign: 'left'
                        valign: 'top'
                        text_size: self.width - dp(40), None
                
                # User Account
                BoxLayout:
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    padding: dp(20)
                    spacing: dp(12)
                    canvas.before:
